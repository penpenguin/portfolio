---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const projects = await getCollection('projects');
---

<Layout title="Projects - Portfolio">
  <section class="projects-hero">
    <div class="container">
      <div class="hero-content">
        <h1>My Projects</h1>
        <p>作品集</p>
      </div>
    </div>
  </section>

  <section class="projects-grid">
    <div class="container">
      <div class="grid grid-2">
        {projects.map((project) => (
          <article class="project-card card card-glass">
            <div class="project-header">
              {project.data.heroImage && (
                <img src={project.data.heroImage} alt={project.data.title} class="project-image" />
              )}
              <div class="project-meta">
                <h2><a href={`/projects/${project.slug}`}>{project.data.title}</a></h2>
                <p class="project-date">
                  {project.data.pubDate.toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'
                  })}
                </p>
              </div>
            </div>
            
            <div class="project-content">
              <p class="project-description">{project.data.description}</p>
              
              {project.data.tags && (
                <div class="project-tags">
                  {project.data.tags.map((tag) => (
                    <span class="tag">{tag}</span>
                  ))}
                </div>
              )}
              
              <div class="project-links">
                {project.data.link && (
                  <a href={project.data.link} target="_blank" rel="noopener noreferrer" class="btn btn-glass">
                    ライブ版を見る
                  </a>
                )}
                {project.data.github && (
                  <a href={project.data.github} target="_blank" rel="noopener noreferrer" class="btn btn-glass">
                    コードを見る
                  </a>
                )}
                <a href={`/projects/${project.slug}`} class="btn btn-primary">
                  詳細を見る
                </a>
              </div>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>
</Layout>

<style>
  .projects-hero {
    padding: var(--space-2xl) 0;
    text-align: center;
  }

  .hero-content h1 {
    font-size: var(--font-size-5xl);
    margin-bottom: var(--space-md);
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-content p {
    font-size: var(--font-size-lg);
    color: var(--text-secondary);
    max-width: 600px;
    margin: 0 auto;
  }

  .projects-grid {
    padding: var(--space-2xl) 0;
  }

  .project-card {
    padding: 0;
    overflow: hidden;
    transition: all 0.3s ease;
  }

  .project-card:hover {
    transform: translateY(-8px);
  }

  .project-header {
    position: relative;
  }

  .project-image {
    width: 100%;
    height: 200px;
    object-fit: cover;
    border-radius: var(--radius-lg) var(--radius-lg) 0 0;
  }

  .project-meta {
    padding: var(--space-lg);
    padding-bottom: var(--space-md);
  }

  .project-meta h2 {
    margin: 0 0 var(--space-xs) 0;
  }

  .project-meta h2 a {
    color: var(--text-primary);
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .project-meta h2 a:hover {
    color: var(--text-accent);
  }

  .project-date {
    color: var(--text-secondary);
    font-size: var(--font-size-sm);
    margin: 0;
  }

  .project-content {
    padding: 0 var(--space-lg) var(--space-lg);
  }

  .project-description {
    color: var(--text-secondary);
    margin-bottom: var(--space-md);
  }

  .project-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-xs);
    margin-bottom: var(--space-lg);
  }

  .tag {
    background: var(--glass-bg);
    color: var(--text-accent);
    padding: var(--space-xs) var(--space-sm);
    border-radius: var(--radius-sm);
    font-size: var(--font-size-xs);
    font-weight: 600;
    border: 1px solid var(--glass-border);
  }

  .project-links {
    display: flex;
    gap: var(--space-sm);
    flex-wrap: wrap;
  }

  .project-links .btn {
    padding: var(--space-xs) var(--space-md);
    font-size: var(--font-size-sm);
  }

  @media (max-width: 768px) {
    .hero-content h1 {
      font-size: var(--font-size-4xl);
    }
    
    .project-links {
      flex-direction: column;
    }
    
    .project-links .btn {
      text-align: center;
    }
  }
</style>