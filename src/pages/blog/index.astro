---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const blogPosts = await getCollection('blog');
const sortedPosts = blogPosts.sort((a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime());
---

<Layout title="Blog - Portfolio">
  <section class="blog-hero">
    <div class="container">
      <div class="hero-content">
        <h1>Blog</h1>
        <p>
          Thoughts, tutorials, and insights about web development, 
          technology, and the creative process.
        </p>
      </div>
    </div>
  </section>

  <section class="blog-content">
    <div class="container">
      {sortedPosts.length > 0 ? (
        <div class="posts-grid">
          {sortedPosts.map((post) => (
            <article class="post-card card card-glass">
              <div class="post-header">
                {post.data.heroImage && (
                  <img src={post.data.heroImage} alt={post.data.title} class="post-image" />
                )}
                <div class="post-meta">
                  <h2><a href={`/blog/${post.slug}`}>{post.data.title}</a></h2>
                  <p class="post-date">
                    {post.data.pubDate.toLocaleDateString('en-US', {
                      year: 'numeric',
                      month: 'long',
                      day: 'numeric'
                    })}
                  </p>
                </div>
              </div>
              
              <div class="post-content">
                <p class="post-description">{post.data.description}</p>
                
                {post.data.tags && (
                  <div class="post-tags">
                    {post.data.tags.map((tag) => (
                      <span class="tag">{tag}</span>
                    ))}
                  </div>
                )}
                
                <a href={`/blog/${post.slug}`} class="read-more btn btn-glass">
                  Read More â†’
                </a>
              </div>
            </article>
          ))}
